#!/usr/bin/env groovy

/* vim:set ts=4:sw=4:et:sts=4:ai:tw=80 */


class Buildoop {
	def usage() {
		println """usage: buildoop [options] | <bom-name> <[options]> 
Options: 
	-help       this help
 	-version    version information
 	-checkenv   check minimal enviroment and host tools
BOM Options:
 	-i, -info   list platforms target available 
 	-b, -build  list platforms target available
	-c, -clean
	-cleanall
Package Options:
 	-i, -info   list platforms target available 
 	-b, -build  list platforms target available
	-c, -clean
	-cleanall
	"""
	}

    def parseOpt(args) {

		usage()
		println args


    }

    static def main(args) {
        Buildoop buildoop = new Buildoop()
        buildoop.parseOpt(args)
    }
}
