#!/usr/bin/env groovy 

/* vim:set ts=4:sw=4:et:sts=4:ai:tw=80 */
import lib.PackageOptions

class Buildoop {

	def Buildoop() {
	}

	def get_version() {
		println "Buildoop v0.0.1-alpha (c) 2014\n"
	}

    static def main(args) {
        Buildoop buildoop = new Buildoop()
        buildoop.get_version()

		ParseOptions parseOptions = new ParseOptions(args)
		println parseOptions.parseOpt()
    }
}
