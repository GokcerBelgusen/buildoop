if [ -z "$ZSH_NAME" ] && [ "x$0" = "x./buildoop.env" ]; then
   echo "Error: This script needs to be sourced. Please run as '. ./buildoop.env'"
else
   if [ -n "$BASH_SOURCE" ]; then
      BDROOT="`dirname $BASH_SOURCE`"
   elif [ -n "$ZSH_NAME" ]; then
      BDROOT="`dirname $0`"
   else
      BDROOT="`pwd`"
   fi
   BDROOT=`readlink -f "$BDROOT"`
   BUILDDIR=build
   if [ ! -d $BUILDDIR ]; then 
	   mkdir $BUILDDIR
   fi

   export BDROOT BUILDDIR
fi

